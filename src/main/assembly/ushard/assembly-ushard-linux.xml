<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${timestamp}-linux</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/ushard/bin</directory>
			<outputDirectory>ushard/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
				<include>ushard</include>
				<include>wrapper-linux*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/ushard/lib</directory>
			<outputDirectory>ushard/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
				<include>libwrapper-linux*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/ushard/conf</directory>
			<outputDirectory>ushard/conf</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>ushard/conf</outputDirectory>
			<excludes>
				<exclude>*.dtd</exclude>
				<exclude>log4j*</exclude>
				<exclude>rule_template.xml</exclude>
				<exclude>schema_template.xml</exclude>
				<exclude>server_template.xml</exclude>
				<exclude>cacheservice.properties</exclude>
				<exclude>zkconf/cacheservice.properties</exclude>
			</excludes>
		</fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <outputDirectory>ushard/</outputDirectory>
            <includes>
                <include>version.txt</include>
            </includes>
        </fileSet>
		<fileSet>
			<directory>src/main/assembly/ushard/conf</directory>
			<outputDirectory>ushard/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly/bin</directory>
			<outputDirectory>ushard/bin</outputDirectory>
			<fileMode>0755</fileMode>
			<includes>
				<include>*.sh</include>
            </includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/logs</directory>
			<outputDirectory>ushard/logs</outputDirectory>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>
        <fileSet>
            <directory>${basedir}/catlet</directory>
            <outputDirectory>ushard/catlet</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
	</fileSets>

</assembly>
